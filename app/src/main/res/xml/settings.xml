<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:title="@string/settings.title">

	<Preference
		android:title="@string/settings.servers_title"
		android:key="servers"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsServerFragment">
	</Preference>

	<Preference
		android:title="@string/settings.appearance_title"
		android:key="appearance"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsAppearanceFragment">
	</Preference>

	<Preference
		android:title="@string/settings.drawer_items_title"
		android:key="drawer"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsDrawerFragment">
	</Preference>

	<Preference
		android:title="@string/settings.cache_screen_title"
		android:key="cache"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsCacheFragment">
	</Preference>

	<Preference
		android:title="@string/settings.sync_title"
		android:key="sync"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsSyncFragment">
	</Preference>

	<Preference
		android:title="@string/settings.playback_title"
		android:key="playback"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsPlaybackFragment">
	</Preference>

	<Preference
		android:title="@string/settings.casting"
		android:key="cast"
		app:fragment="github.daneren2005.dsub.fragments.settings.SettingsCastFragment">
	</Preference>
</PreferenceScreen>
